<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/cv"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:background="@drawable/shadow">

            <!--  <ImageView
                  android:id="@+id/card_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@mipmap/ic_launcher" />-->

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Заголовок"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/card_date2"
                android:layout_alignBottom="@+id/card_date2"
                android:layout_alignLeft="@+id/card_title"
                android:layout_alignStart="@+id/card_title"
                android:text="10.22.63" />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/card_title"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:padding="25dp"
                android:text="Текст"
                android:layout_alignRight="@+id/card_title"
                android:layout_alignEnd="@+id/card_title"
                android:layout_alignLeft="@+id/card_date"
                android:layout_alignStart="@+id/card_date" />

            <!-- <TextView
                 android:id="@+id/card_author"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/card_text"
                 android:layout_marginBottom="10dp"
                 android:layout_marginLeft="10dp"
                 android:text="TextView" />-->

            <TextView
                android:id="@+id/card_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11.22.63"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/card_text"
                android:layout_alignLeft="@+id/card_date"
                android:layout_alignStart="@+id/card_date" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>