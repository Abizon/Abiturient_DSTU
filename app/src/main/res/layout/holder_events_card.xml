<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/cv"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:background="@drawable/shadow">

            <!--  <ImageView
                  android:id="@+id/card_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@mipmap/ic_launcher" />-->

            <TextView
                android:id="@+id/card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Заголовок"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/card_date2"
                android:layout_alignBottom="@+id/card_date2"
                android:layout_alignLeft="@+id/card_title"
                android:layout_alignStart="@+id/card_title"
                android:text="10.22.63"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/card_text"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/card_text" />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/card_title"
                android:layout_alignLeft="@+id/card_date"
                android:layout_alignRight="@+id/card_title"
                android:layout_alignStart="@+id/card_date"
                android:layout_below="@+id/card_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:gravity="fill_horizontal"
                android:padding="25dp"
                android:text="Текст"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_title" />

            <!-- <TextView
                 android:id="@+id/card_author"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/card_text"
                 android:layout_marginBottom="10dp"
                 android:layout_marginLeft="10dp"
                 android:text="TextView" />-->

            <TextView
                android:id="@+id/card_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/card_date"
                android:layout_alignStart="@+id/card_date"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/card_text"
                app:layout_constraintLeft_toRightOf="@+id/card_date"
                android:layout_marginLeft="16dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>